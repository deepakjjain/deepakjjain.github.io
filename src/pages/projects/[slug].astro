---
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((entry) => ({
    // Strip file extension to get clean URL slug
    params: { slug: entry.id.replace(/\.[^.]+$/, '') },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props;
const { title, description, stack, role, live, github } = entry.data;
const { Content } = await render(entry);
---

<BaseLayout title={`${title} | Deepak Jain`} description={description}>
  <main id="main" class="max-w-3xl mx-auto px-4 py-16">

    <!-- Back link -->
    <a
      href="/#projects"
      class="inline-flex items-center gap-2 text-sm text-base-content/55 hover:text-primary transition-colors mb-10"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to projects
    </a>

    <!-- Header -->
    <header class="mb-10">
      <p class="text-xs font-semibold text-primary uppercase tracking-widest mb-3">
        {role}
      </p>
      <h1 class="text-4xl sm:text-5xl font-bold mb-4 tracking-tight">
        {title}
      </h1>
      <p class="text-lg text-base-content/65 leading-relaxed mb-6">
        {description}
      </p>

      <!-- Stack -->
      <div class="flex flex-wrap gap-2 mb-6">
        {stack.map((tech) => (
          <span class="badge badge-outline badge-sm py-3 px-3">{tech}</span>
        ))}
      </div>

      <!-- Links -->
      <div class="flex flex-wrap gap-3">
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline btn-sm gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          View Source
        </a>
        {live && (
          <a
            href={live}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-primary btn-sm gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Live Demo
          </a>
        )}
      </div>
    </header>

    <div class="divider"></div>

    <!-- MDX content -->
    <article class="prose prose-invert max-w-none mt-10
      prose-h2:text-2xl prose-h2:font-bold prose-h2:mt-10 prose-h2:mb-4
      prose-p:text-base-content/80 prose-p:leading-relaxed
      prose-li:text-base-content/80
      prose-strong:text-base-content
      prose-code:text-primary prose-code:bg-base-200 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
    ">
      <Content />
    </article>

    <!-- Footer nav -->
    <div class="mt-16 pt-8 border-t border-base-300">
      <a
        href="/#projects"
        class="inline-flex items-center gap-2 text-sm text-base-content/55 hover:text-primary transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to all projects
      </a>
    </div>

  </main>
</BaseLayout>
