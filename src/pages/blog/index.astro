---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Nav from '../../components/Nav.astro';
import BlogCard from '../../components/BlogCard.astro';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<BaseLayout
  title="Blog | Deepak Jain"
  description="Writing on full-stack development, architecture decisions, and lessons from building real products."
>
  <Nav />

  <main id="main" class="max-w-3xl mx-auto px-4 py-16">

    <!-- Header -->
    <header class="mb-12">
      <p class="text-xs font-semibold text-primary uppercase tracking-widest mb-3">Writing</p>
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight mb-4">Blog</h1>
      <p class="text-lg text-base-content/60 leading-relaxed">
        Thoughts on full-stack development, architecture, and lessons learned building real products.
      </p>
    </header>

    <!-- Post list -->
    {allPosts.length === 0 ? (
      <p class="text-base-content/45 text-sm">No posts yet — check back soon.</p>
    ) : (
      <div class="flex flex-col gap-4">
        {allPosts.map((post) => (
          <BlogCard post={post} />
        ))}
      </div>
    )}

  </main>

  <footer class="py-8 px-4 bg-base-200 border-t border-base-300 text-center text-base-content/45 text-sm">
    <p>© {new Date().getFullYear()} Deepak Jain · <a href="/" class="hover:text-primary transition-colors">← Home</a></p>
  </footer>
</BaseLayout>
